{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build",
      "type": "shell",
      "command": "make -j4",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Flash QSPI (wait)",
      "type": "shell",
      "command": "${workspaceFolder}/tools/flash_qspi_wait.sh",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "Build then Flash QSPI (wait)",
      "type": "shell",
      "dependsOn": [
        "Build",
        "Flash QSPI (wait)"
      ],
      "dependsOrder": "sequence",
      "command": "echo \"Build then flash complete\"",
      "problemMatcher": []
    },
    {
      "label": "build_libdaisy",
      "type": "shell",
      "command": "make",
      "options": {
        "cwd": "${workspaceFolder}/../libDaisy/"
      },
      "problemMatcher": [
        "$gcc"
      ]
    },
    {
      "label": "build_daisysp",
      "type": "shell",
      "command": "make",
      "options": {
        "cwd": "${workspaceFolder}/../DaisySP/"
      },
      "problemMatcher": [
        "$gcc"
      ]
    }
  ]
}
